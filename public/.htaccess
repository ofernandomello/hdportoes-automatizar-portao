<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Redireciona requisições para a raiz do domínio para /lp/
  RewriteRule ^$ /lp/ [L,R=301]
  
  # Se a requisição não for para /lp/, redireciona para /lp/
  RewriteCond %{REQUEST_URI} !^/lp/
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ /lp/$1 [L,R=301]
  
  # Dentro de /lp/, redireciona todas as requisições para index.html (SPA routing)
  RewriteCond %{REQUEST_URI} ^/lp/
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^lp/.*$ /lp/index.html [L]
</IfModule>
