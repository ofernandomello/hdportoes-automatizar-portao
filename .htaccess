<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Não reescrever se for um ficheiro existente
  RewriteCond %{REQUEST_FILENAME} -f
  RewriteRule ^ - [L]

  # Não reescrever se for um diretório existente
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Reescrever todas as outras rotas para index.html
  RewriteRule ^(.*)$ index.html [L]
</IfModule>

# Suporte a GZIP (opcional, melhora performance)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache headers (opcional, melhora performance)
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/html "access plus 0 seconds"
  ExpiresByType application/javascript "access plus 1 year"
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType image/* "access plus 1 year"
</IfModule>
